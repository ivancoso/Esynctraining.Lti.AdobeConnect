<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                                     namespace="eSyncTraining.Database.Entities"
                                     assembly="eSyncTraining.Database">

  <class name="UserLoginHistoryEntity" table="[USER_LOGIN_HISTORY]">

    <id name="Id" column="[ID]" type="int">
        <generator class="identity" />
    </id>

    <property name="Login" column="[USER_LOGIN]" type="string" />

    <property name="Name" column="[USER_NAME]" type="string" />

    <property name="Timestamp" column="[TIMESTAMP]" type="DateTime" update="false" insert="false" />

  </class>

</hibernate-mapping>
