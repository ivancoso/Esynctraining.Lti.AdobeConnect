<?xml version="1.0" encoding="utf-8"?>
<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	initialize="onInitialize()"
	width="166" height="140">
	
	<fx:Script>
		<![CDATA[
			
			[Bindable]
			private var controller:BroadcastViewerController;
			
			private function onInitialize():void
			{
				controller = new BroadcastViewerController(this);
			}
			
		]]>
	</fx:Script>
	
	<s:filters>
		<s:DropShadowFilter />
	</s:filters>
	
	<s:Group left="3" right="4" top="1" bottom="3">
		<s:VGroup width="100%" gap="1">
			<s:Group width="100%">
				<s:Image id="imgClose" right="0" focusEnabled="true" click="{controller.onClose()}">
					<s:source>
						<s:MultiDPIBitmapSource 
							source160dpi="@Embed('assets/Close_160.png')" 
							source240dpi="@Embed('assets/Close_240.png')" 
							source320dpi="@Embed('assets/Close_320.png')"/>
					</s:source>
				</s:Image>
			</s:Group>
			<s:BorderContainer backgroundColor="0x000000" borderVisible="false" width="160" height="120">
				<mx:UIComponent id="videoContainer" width="160" height="120" />
			</s:BorderContainer>
		</s:VGroup>
		<s:Label id="lblError" width="100%" fontWeight="bold"
			verticalCenter="0" horizontalCenter="0"
			color="red" visible="true" x="0" y="23"/>
	</s:Group>
	
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:stroke>
			<s:SolidColorStroke color="0x484848" />
		</s:stroke>
	</s:Rect>
	
</s:SkinnablePopUpContainer>
